{
    "name": "keboola/token-sniffer",
    "bin": ["bin/token-sniffer"],
    "require": {
        "symfony/process": "^4.2"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": ">=7.0.2",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-shim": "^0.10.6",
        "phpunit/phpunit": "^7.0",
        "keboola/datadir-tests": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\TokenSniffer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\TokenSniffer\\Tests\\": "tests/phpunit/",
            "Keboola\\TokenSniffer\\FunctionalTests\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit"
        ],
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
